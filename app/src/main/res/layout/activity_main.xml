<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.release.aoptest.MainActivity">

    <Button
        android:onClick="readFile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="读文件"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="50dp"
        />

    <Button
        android:id="@+id/btn_writeFile"
        android:onClick="writeFile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="写文件"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="150dp"
        />

    <Button
        android:id="@+id/btn_printLog"
        android:onClick="printLog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="打印Log"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_writeFile"
        android:layout_marginTop="50dp"
        />

    <Button
        android:id="@+id/btn_login"
        android:onClick="login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="登录"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_printLog"
        android:layout_marginTop="50dp"
        />

    <Button
        android:onClick="requestPermission"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="请求权限"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_login"
        android:layout_marginTop="50dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>